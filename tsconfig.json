{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "paths": {
        "@page-objects/*": [
            "page-objects/*"
        ],
        "@utils/*": [
            "utils/*"
        ],
        "@tests/*": [
            "tests/*"
        ]
      },
      "strict": true
    },
    "include": [
      "src/**/*",
    ]
  }